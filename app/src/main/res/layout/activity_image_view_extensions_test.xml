<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ImageViewExtensionsTestActivity">

    <Button
        android:id="@+id/btLoadImageFromUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imageviews_loadimagefromurl_button"
        android:layout_margin="@dimen/home_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_launcher_background"
        android:layout_margin="@dimen/home_padding"
        android:padding="@dimen/home_padding"
        app:layout_constraintTop_toBottomOf="@id/btLoadImageFromUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>